{% extends 'base.html.twig' %}

{% block title %}
    visa applications
{% endblock %}

{% block main %}
    <section id="app-content">

        <div class="content-body">

            <div class="page-header">
                <div class="box-layout">
                    <div class="col-xs-5 col-sm-6 col-md-5 va-m">
                        <h3 class="pull-left">Application details</h3>
                        <div class="col-xs-2 text-right pull-left">
                        </div>
                    </div>
                    <div class="col-xs-7 col-sm-6 col-md-7 va-m">
                    </div>

                </div>
            </div>
            <div class="panel panel-default bdr-t-wdh-0 mb-0">
                <div class="panel-body">
                    <div class="box-layout">
                        <div class="pull-right">
                            <a href="{{ path('app_visa_application_approve', {id: application.id }) }}" class="btn btn-success" id="approve_btn">Approve</a>
                            <a href="{{ path('app_visa_application_deny', {id: application.id }) }}" class="btn btn-success" id="approve_deny">Deny</a>
                            <a href="{{ path('app_visa_application_needmore', {id: application.id }) }}" class="btn btn-success" id="approve_needmore">Need more infos</a>
                        </div>
                    </div>
                </div>

                <div class="page-list">

                    <div class="table-responsive">
                        <table class="table table-hover table-striped table-bordered email-list">
                            <tr class="">
                                <td><strong>Application NÂ°</strong></td>
                                <td>
                                    <strong>{{ application.applicationNumber }}</strong>
                                </td>
                            </tr>
                            <tr class="">
                                <td>Status</td>
                                <td><span class="badge bg-success">{{ application.status }}</span></td>
                            </tr>
                            <tr class="">
                                <td>Photo</td>
                                <td>{{ application.photo }}</td>
                            </tr>
                            <tr class="">
                                <td>First Name</td>
                                <td>{{ application.firstName }}</td>
                            </tr>
                            <tr class="">
                                <td>Middle Name</td>
                                <td>{{ application.MiddleName }}</td>
                            </tr>
                            <tr class="">
                                <td>Sex</td>
                                <td>{{ application.gender }}</td>
                            </tr>
                            <tr class="">
                                <td>Date of birth</td>
                                <td>{{ application.dateOfBirth }}</td>
                            </tr>

                            <tr class="">
                                <td>Marital status</td>
                                <td>{{ application.maritalStatus }}</td>
                            </tr>
                            <tr class="">
                                <td>country Of Residence</td>
                                <td>{{ application.CountryOfResidence }}</td>
                            </tr>

                            <tr class="">
                                <td>Country of Birth</td>
                                <td>{{ application.CountryOfBirth }}</td>
                            </tr>

                            <tr class="">
                                <td>CurrentNationality</td>
                                <td>{{ application.CurrentNationality }}</td>
                            </tr>
                            <tr class="">
                                <td>Current Nationality Acquired By</td>
                                <td>{{ application.CurrentNationalityAcquiredBy }}</td>
                            </tr>
                            <tr class="">
                                <td>Passport</td>
                                <td>{{ application.passportScan }}</td>
                            </tr>

                            <tr class="">
                                <td>Invitation Letter</td>
                                <td>{{ application.invitationLetterScan }}</td>
                            </tr>

                            <tr class="">
                                <td>Hotel Reservation</td>
                                <td>{{ application.hotelReservationScan }}</td>
                            </tr>
                            <tr class="">
                                <td>Flight Ticket </td>
                                <td>{{ application.flightTicketScan }}</td>
                            </tr>
                            <tr class="">
                                <td>Profession </td>
                                <td>{{ application.profession }}</td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-footer">

                    </div>
                </div>
            </div>

        </div>

    </section>
{% endblock %}