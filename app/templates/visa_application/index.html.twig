{% extends 'base.html.twig' %}

{% block title %}
    visa applications
{% endblock %}

{% block main %}
    <section id="app-content">

        <div class="content-body">

            <div class="page-header">
                <div class="box-layout">
                    <div class="col-xs-5 col-sm-6 col-md-5 va-m">
                        <h3 class="pull-left">List of visa applications</h3>
                        <div class="col-xs-2 text-right pull-left">
                        </div>
                    </div>
                    <div class="col-xs-7 col-sm-6 col-md-7 va-m">
                    </div>

                </div>
            </div>
            <div class="panel panel-default bdr-t-wdh-0 mb-0">
                <div class="panel-body">
                    <div class="box-layout">
                    </div>
                </div>

                <div class="page-list">

                    <div class="table-responsive">
                        <table class="table table-hover table-striped table-bordered email-list">
                            {% if applications is empty %}
                                <tr>No visa application evalable</tr>
                            {% else %}
                                    <thead>
                                        <tr>
                                            <th class="col-actions">
                                                <div class="input-group input-group-sm">
                                                    <span class="input-group-addon">
                                                        <input type="checkbox" id="customcheckbox-one0" value="1" data-toggle="checkall" data-target=".page-list">
                                                    </span>

                                                    <div class="input-group-btn">
                                                        <button type="button" class="btn btn-default btn-sm dropdown-toggle btn-nospin" data-toggle="dropdown">
                                                            <i class="fa fa-angle-down "></i>
                                                        </button>
                                                        <ul class="pull-left page-list-actions dropdown-menu" role="menu">
                                                            <li></li>
                                                            <li>
                                                                <a class="" href="" data-toggle="confirmation" data-precheck="batchActionPrecheck" data-message="" data-confirm-text="Supprimer" data-confirm-callback="executeBatchAction" data-cancel-text="Annuler" data-cancel-callback="dismissConfirmation">
                                                                     <span>
                                                                            <i class="fa fa-book text-primary"></i>
                                                                            <span>Validate selection</span>
                                                                     </span>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </th>
                                            <th class="visible-sm visible-md visible-lg">Application number</th>
                                            <th class="visible-sm visible-md visible-lg">Visa type</th>
                                            <th class="visible-sm visible-md visible-lg">Date</th>
                                            <th class="visible-sm visible-md visible-lg">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for application in applications %}
                                        <tr class="active">
                                            <td>
                                                <div class="input-group input-group-sm">
                                                    <span class="input-group-addon">
                                                        <input type="checkbox" data-target="tbody" data-toggle="selectrow" class="list-checkbox" name="cb122" value="122">
                                                    </span>
                                                    <div class="input-group-btn">
                                                        <button type="button" class="btn btn-default btn-sm dropdown-toggle btn-nospin" data-toggle="dropdown">
                                                            <i class="fa fa-angle-down "></i>
                                                        </button>
                                                        <ul class="pull-left page-list-actions dropdown-menu" role="menu">
                                                            <li>
                                                                <a class="hidden-xs" href="{{ path('app_visa_application_details', {id: application.id}) }}" data-toggle="ajax">
                                                                    <span><i class="fa fa-eye"></i>
                                                                        <span>View</span>
                                                                    </span>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>{{ application.applicationNumber }}</td>
                                            <td>{{ application.visaType }}</td>
                                            <td>{{ application.dateCreated | date }}</td>
                                            <td><span class="badge bg-success">{{ application.status }}</span></td>
                                        </tr>
                                    </tbody>
                                {% endfor %}
                            {% endif %}
                        </table>
                    </div>
                    <div class="panel-footer">
                        <div class="hidden-xs visible-sm visible-md visible-lg">
                            <div class="pull-right">
                                <select autocomplete="false" class="form-control pagination-limit">
                                    <option value="5">5</option>
                                    <option value="10">10</option>
                                    <option value="20">20</option>
                                </select>
                            </div>

                            <div class="pagination-wrapper ml-md mr-md text-center">
                                <ul class="pagination np nm ">
                                    <li class="disabled">
                                        <a href="javascript:void(0);">
                                            <i class="fa fa-angle-double-left"></i>
                                        </a>
                                    </li>
                                    <li class="disabled">
                                        <a href="javascript:void(0);">
                                            <i class="fa fa-angle-left"></i>
                                        </a>
                                    </li>
                                    <li class="active">
                                        <a href="javascript:void(0);">
                                            <span>1</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="" data-toggle="ajax" data-target=".page-list">
                                            <span>2</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="" data-toggle="ajax" data-target=".page-list">
                                            <i class="fa fa-angle-right"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="" data-toggle="ajax" data-target=".page-list">
                                            <i class="fa fa-angle-double-right"></i>
                                        </a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                                <small class="text-muted"> </small>
                            </div>
                        </div>
                        <div class="visible-xs hidden-sm hidden-md hidden-lg">
                            <div class="pull-right">
                                <select autocomplete="false" class="form-control pagination-limit input-sm">
                                    <option value="5">5</option>
